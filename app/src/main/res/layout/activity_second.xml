<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:background="@drawable/bg_cloud_01"
        tools:context=".SecondActivity">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="50dp"
            android:layout_weight="2">

        <ImageView
                android:id="@+id/ivGKI"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                app:srcCompat="@mipmap/ic_launcher_foreground" />
        <TextView
                android:id="@+id/tvTitle"
                android:layout_toRightOf="@+id/ivGKI"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/ewarta_title"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />


    </RelativeLayout>

    <GridLayout
            android:columnCount="2"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:layout_weight="8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="14dp">


        <androidx.cardview.widget.CardView
                android:id="@+id/cvEwarta"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="16dp"
                    android:background="@android:color/transparent"
                    android:orientation="vertical">

                <ImageView
                        android:id="@+id/ivEwarta"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:alpha="1"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/ic_ewarta_02" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/white"
                        android:text="@string/menu_ewarta"
                        android:textSize="14sp"
                        android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:id="@+id/cvLiturgi"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

            <LinearLayout
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="16dp"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                        app:srcCompat="@drawable/ic_liturgi"
                        android:layout_gravity="center_horizontal"
                        android:background="@android:color/transparent"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                <TextView
                        android:text="@string/menu_liturgi"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
                android:id="@+id/cvBKJ"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

            <LinearLayout
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="16dp"
                    android:orientation="vertical"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                        app:srcCompat="@drawable/ic_bkj"
                        android:layout_gravity="center_horizontal"
                        android:background="@android:color/transparent"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                <TextView
                        android:text="@string/menu_bkj"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                        android:id="@+id/cvPelangi"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp">

            <LinearLayout
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="16dp"
                    android:orientation="vertical"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                        app:srcCompat="@drawable/ic_majalah_pelangi"
                        android:layout_gravity="center_horizontal"
                        android:background="@android:color/transparent"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                <TextView
                        android:text="@string/menu_pelangi"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                        android:id="@+id/cvIbadah"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp">

            <LinearLayout
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="16dp"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                        app:srcCompat="@drawable/ic_favorite_red"
                        android:layout_gravity="center_horizontal"
                        android:background="@android:color/transparent"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                <TextView
                        android:text="@string/menu_ibadah"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                        android:id="@+id/cvPendeta"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp">

            <LinearLayout
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@android:color/transparent"
                    android:layout_margin="16dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@android:color/transparent"
                        android:layout_gravity="center_horizontal"
                        app:srcCompat="@drawable/ic_sentiment_satisfied" />
                <TextView
                        android:text="@string/menu_pendeta"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                        android:id="@+id/cvHubungi"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardBackgroundColor="@android:color/transparent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp">

            <LinearLayout
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="16dp"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                        app:srcCompat="@drawable/ic_call"
                        android:layout_gravity="center_horizontal"
                        android:background="@android:color/transparent"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                <TextView
                        android:text="Hubungi Kami"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@android:color/white"
                        android:background="@android:color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:id="@+id/cvKatekisasi"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

            <LinearLayout
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="16dp"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                        app:srcCompat="@drawable/ic_katekisasi"
                        android:layout_gravity="center_horizontal"
                        android:background="@android:color/transparent"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                <TextView
                        android:text="@string/menu_katekisasi"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:id="@+id/cvYoutube"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

            <LinearLayout
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="16dp"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                        app:srcCompat="@drawable/ic_youtube"
                        android:layout_gravity="center_horizontal"
                        android:background="@android:color/transparent"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                <TextView
                        android:text="@string/menu_youtube"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </GridLayout>


    <TextView
            android:id="@+id/txt_version"
            android:layout_width="match_parent"
            android:background="@color/trans_black"
            android:textColor="@color/white"
            android:layout_height="24sp"
            android:textSize="12sp"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/copyright"/>

</LinearLayout>
